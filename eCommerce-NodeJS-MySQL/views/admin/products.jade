extends admin

block details
    .row
        .features_items
            if products
                each product in products
                    .row
                        .col-sm-3
                            .product-image-wrapper
                                .single-products
                                    .productinfo.text-center
                                        img(src='/img/products/' + product.Image, alt=product.ProductName)
                        .col-sm-6
                            h2.cat= product.ProductName

                            p
                                b Loại:
                                = ' ' + product.CategoryName

                            p= product.ProductDescription

                            p
                                b Số lượng:
                                = ' ' + product.UnitsInStock
                            p
                                b Năm sản xuất:
                                = ' ' + product.ManufactureYear
                            p
                                b Thương hiệu:
                                |  astore

                            p
                                b Giá bán:
                                = ' ₱' + product.ProductPrice

                            - var feature = 'có'
                            if (product.Feature == 0)
                                - feature = 'Không'
                            p
                                b Sản phẩm nổi bật:
                                = ' ' + feature



                        .col-sm-3
                            form.dev-form(action='/admin/products/' + product.ProductID + '/edit', method='GET')
                                button.btn.btn-default(type='submit')
                                    i.fa.fa-edit
                                    = ' Sửa'

                            form.dev-form(action='/admin/products/' + product.ProductID + '/delete', method='POST')
                                button.btn.btn-default(type='submit')
                                    i.fa.fa-trash-o
                                    = ' Xóa'
    form(action='/admin/products/add', method='GET')
        button.btn.btn-default(type='submit')
            i.fa.fa-plus
            = ' Thêm sản phẩm mới'
    br
    br